<script>
  function updateLengthValue() {
    const slider = document.getElementById("lengthSlider");
    const lengthValue = document.getElementById("lengthValue");

    switch (slider.value) {
      case "0":
        lengthValue.value = "6";
        break;
      case "1":
        lengthValue.value = "4";
        break;
      case "2":
        lengthValue.value = "3";
        break;
    }
  }
</script>
